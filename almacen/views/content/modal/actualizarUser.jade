#actualizarUserModal.modal.fade(tabindex='-1' aria-labelledby='nuevoUserLabel' aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
            
            h1#nuevoUserLabel.modal-title.fs-5 Actualizar Usuarios

            button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body
        
            form 
                label(for="nombreUser") Nombre 
                input#nombreUserUpdate.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="Nombre" name= 'nombreUser'  ) 
                
                label(for="apellido") Apellido
                input#apellidoUpdate.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="Apellido"  name="apellido") 
                
                
            
                
                label(for="role") Rol 
                //Select que muestre de manera dinamica el nombre de la categoria
                
                select#roleUpdate.form-select(name='role')
                    option(value="ADMIN") ADMIN
                    option(value="Almacenista") Almacenista
                    option(value="Reader") Reader

        
        .modal-footer
            button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
            button.btn.btn-primary#enviarNuevaProducto(type='button',onclick="ActualizarUsuario()") Save changes
          