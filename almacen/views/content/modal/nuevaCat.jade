#nuevaCatModal.modal.fade(tabindex='-1' aria-labelledby='nuevaCatModalLabel' aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
            
            h1#nuevaCatModalLabel.modal-title.fs-5 #{nombreTabla}

            button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body
            if nombreTabla ==='producto'
                form 
                    label(for="producto") Nombre 
                    input#producto.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="Nombre" name= 'producto'  ) 
                    
                    label(for="codigo") Codigo
                    input#codigo.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="CÃ³digo"  name="codigo") 
                    
                    label(for="precio") Precio
                    input#precio.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="Precio" name="precio")
                    
                    label(for="stock") Stock
                    input#stock.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="Stock" name="stock")
                    
                    label(for="categoria") Categoria

                    //Select que muestre de manera dinamica el nombre de la categoria
                    select#idCategoria.form-select(name='idCategoria')
                        each item in categoria
                            each val, key in item
                                option(value=key) #{val}
                        

                    //- input#idCategoria.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="Categoria" name="categoria") 
                   
                   
                    //input#nombre.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="Nombre de Categoria" ) 
                   // input#enviarNuevaCategoria.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="Nombre de Categoria" ) 
            
            else 
                form(action='/formulario', method='POST', enctype='multipart/form-data')
                    label(for='nombre') Nombre
                    input#nombre.form-control(type='text' aria-describedby='passwordHelpInline' placeholder="Nombre" name="nombre") 
                    //-input#nombre(type='text', name='nombre')
                    //- input#enviar(type='submit', value='enviarNuevaCategoria')

            //ACTUALIZAR/ EL FORMULARIO VA ACA
        .modal-footer
            button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
            if nombreTabla==="producto"
                button.btn.btn-primary#enviarNuevaProducto(type='button',onclick="enviarNuevaProducto()") Save changes
            else
                button.btn.btn-primary#enviarNuevaCategoria(type='button', onclick="enviarNuevaCategoria()") Save changes